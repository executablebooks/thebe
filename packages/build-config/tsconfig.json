{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "target": "es6",
    "noImplicitAny": true,
    "strict": true,
    "moduleResolution": "node",
    "lib": ["DOM", "DOM.iterable", "esnext"],
    "experimentalDecorators": true,
    "strictNullChecks": true,
    "sourceMap": true,
    "baseUrl": ".",
    "paths": {
      "*/": ["node_modules/*"],
      "~/": ["./src/*"]
    },
    "declaration": false,
    "skipLibCheck": true,
    "allowJs": true
  }
}
