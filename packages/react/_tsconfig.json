{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "target": "es6",
    "noImplicitAny": true,
    "strict": true,
    "moduleResolution": "node",
    "lib": ["DOM", "DOM.iterable", "es2019"],
    "experimentalDecorators": true,
    "strictNullChecks": true,
    "sourceMap": true,
    "outDir": "dist/cjs",
    "baseUrl": ".",
    "paths": {
      "*/": ["node_modules/*"],
      "~/": ["./src/*"]
    },
    "declaration": false,
    "skipLibCheck": true,
    "allowJs": true,
    "jsx": "react-jsx"
  },
  "include": ["src/**/*.ts"]
}
